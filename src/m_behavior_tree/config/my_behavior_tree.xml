<root BTCPP_format="4">
    <BehaviorTree ID="MainTree">
        <ReactiveFallback name="root_selector">
            <ReactiveSequence>
                <IsDetectedCondition name="is_detected_condition" topic_name="/is_detected"/>
                <ReactiveFallback name="behavior_selector">
                    <Sequence>
                        <IsAlertCondition name="is_alert_condition" topic_name="/is_alert"/>
                        <Alert name="alert"/>
                    </Sequence>
                    <Sequence>
                        <ExecutionCheck name="is_cooldown_condition" threshold = "60"/>
                        <IsHappyCondition name="is_happy_condition" topic_name="/face_emotion"/>
                        <Dance name="dance"/>
                    </Sequence>
                    <Sequence>
                        <IsAngryCondition name="is_angry_condition" topic_name="/face_emotion"/>
                        <Dash name="dash"/>
                    </Sequence>
                    <Sequence>
                        <ExecutionCheck name="is_cooldown_condition" threshold = "10"/>
                        <IsBoredCondition name="is_bored_condition" topic_name="/is_bored"/>
                        <Yawn name="yawn"/>
                    </Sequence>
                    <TrackFace name="track_face"/>
                </ReactiveFallback>
            </ReactiveSequence>
            <ReactiveFallback>
                <ReactiveSequence>
                    <IsAwakeCondition name="is_awake_condition" topic_name="/is_awake"/>
                    <Idle name="idle"/>
                </ReactiveSequence>
                <Asleep name="asleep"/>
            </ReactiveFallback>
        </ReactiveFallback>
    </BehaviorTree>
</root>
